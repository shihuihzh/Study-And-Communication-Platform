<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http pattern="/user/login*" security="none"/>
	<http pattern="/user/register*" security="none"/>
	<http pattern="/user/login" security="none"/>
	<http auto-config="true" access-denied-page="/403.jsp" >	
		<!-- 权限页面 -->
		<intercept-url pattern="/data/template/private/*" access="ROLE_USER,ROLE_ADMIN" />
		<intercept-url pattern="/user/**" access="ROLE_USER,ROLE_ADMIN" />
		<!-- <intercept-url pattern="/**" access="ROLE_USER,ROLE_ADMIN" /> -->
		
		<!-- 登陆页面 -->
		<form-login login-page="/user/login" authentication-failure-url="/user/login?error=true" default-target-url="/index.jsp" username-parameter="j_email"/>
		
		<!-- 注销成功页面 -->
		<logout logout-success-url="/login.jsp" />
		
		<!-- 会话管理 -->
		<session-management invalid-session-url="/sessionTimeOut.jsp">
			<!-- <concurrency-control max-sessions="1"/ >-->
			
		</session-management>
		<!-- 增加一个filter，这点与Acegi是不一样的，不能修改默认的filter了，这个filter位于FILTER_SECURITY_INTERCEPTOR之前 -->
		<!-- <custom-filter before="FILTER_SECURITY_INTERCEPTOR" ref="myFilter" /> -->
	</http>
	
	<!-- 认证管理器 -->
	<!-- <authentication-manager>
		<authentication-provider>
			<password-encoder hash="md5"></password-encoder>
			<user-service>
				<user name="user" authorities="ROLE_USER" password="user"/>				
			</user-service>
			<jdbc-user-service data-source-ref="dataSource"/>
		</authentication-provider>
	</authentication-manager> -->
	
	<!-- 认证管理器，实现用户认证的入口，主要实现UserDetailsService接口即可 -->
    <authentication-manager alias="authenticationManager">
        <authentication-provider
            user-service-ref="myUserDetailService">
            <!--   如果用户的密码采用加密的话，可以加点“盐”
                <password-encoder hash="md5" />
            -->
        </authentication-provider>
    </authentication-manager>

</beans:beans>